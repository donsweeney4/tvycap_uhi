{
  "cli": {
    "version": ">= 15.0.15",
    "appVersionSource": "remote"
  },
  "build": {
    "development": {
      "developmentClient": true,
      "distribution": "internal",
      "prebuildCommand": "expo prebuild",
      "android": {
        "buildType": "apk"
      }
    },
    "preview": {
      "distribution": "internal",
      "android": {
        "buildType": "apk"  // For direct APK sharing/testing outside Play Store
      },
      "ios": {}
    },
    "production": {
      "distribution": "store",
      "android": {
          "image": "latest",
          "buildType": "app-bundle",  // Use app-bundle for Play Store
          "autoIncrement": true
        },
      
      "ios": {
        "distribution": "store",
        "autoIncrement": true,
        "simulator": false
      }
    },
    "adhoc": {
      "android": {
        "buildType": "apk",
        "distribution": "internal"
      },
      "ios": {
        "distribution": "internal",
        "simulator": false
      }
    },
    "development-simulator": {
      developmentClient: true,
      distribution: "internal",
      ios: {
        simulator: true
      },
      environment: "development"
    }
  },
  "submit": {
    "production": {}
  }
}

